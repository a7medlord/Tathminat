                });
// Validation
                var checkValidaion = function (tab, navigation, index) {
                    if ($this.hasClass('validate')) {
                        var $valid = $this.valid();
                        if (!$valid) {
                            $validator.focusInvalid();
                            return false;
                        }
                    }

                    return true;
                };

                $this.bootstrapWizard({
