@model CloudApp.Models.BusinessModel.Instrument

<div class="modal fade" id="editmoal" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">تعديل صــك</h4>
            </div>
            <div class="modal-body">

                <div class="form-horizontal" id="fromhere">
                    <input type="hidden" id="Id" Name="Id" value="0" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Amount" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Amount" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Area" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Area" class="form-control" />
                            <span asp-validation-for="Area" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="BDiscrib" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="BDiscrib" class="form-control" />
                            <span asp-validation-for="BDiscrib" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Locat" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Locat" class="form-control" />
                            <span asp-validation-for="Locat" class="text-danger" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="SNum" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="SNum" class="form-control" />
                            <span asp-validation-for="SNum" class="text-danger" />
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <div style="float: right">
                    <button type="button" class="btn btn-primary" onclick="editSave()">حفــظ & واغلاق</button>
                   
                    <button type="button" class="btn btn-default" onclick="editClose(this)"> اغلاق</button>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
